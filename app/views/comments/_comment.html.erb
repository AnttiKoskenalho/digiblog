<p>
	<strong>
		Commenter:
	</strong>
	
	<%= comment.commenter %>
</p>

<p>
	<strong>
		Comment:
	</strong>
	
	<%= comment.body %>
</p>

<p>
	<strong>
		At:
	</strong>
	
	<%= comment.created_at %>
</p>

<% if admin_rights %>
	<p>
		<%= link_to 'Destroy Comment', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?'} %>
	</p>
<% end %>